<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Service: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_service"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Female bob hair cut"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout1"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Artist:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_artist_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Chau Nguyen"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout2"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Level: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_artist_level"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Senior"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout3"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Salon: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_salon"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Beauty and the Beat"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout4"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Time:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/booking_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:text="10:00 am"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Date: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/booking_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:text="24-11-2019"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout5"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Price:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_service_price"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:text="$99.90"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Adjustment:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_price_adjust"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:text="$19.98"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout6"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Sum:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_sum_price"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:text="$119.88"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Tax 12%:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_tax"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:text="$14.39"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayout7"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="Total:"
                    android:textColor="@color/secondaryColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/booking_total_cost"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:gravity="right|center_vertical"
                    android:paddingEnd="30dp"
                    android:text="$134.26"
                    android:textColor="@color/secondaryColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</merge>